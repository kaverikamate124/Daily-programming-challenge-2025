#include <iostream>
#include <algorithm>
using namespace std;

void mergeArray(int arr1[],int m, int arr2[],int n)
{
    for(int I=0;I<m;I++)
    {
        if(arr1[I]>arr2[0])
       {
           swap(arr1[I],arr2[0]);
           
           int one=arr2[0];
           int j;
           for(j=1; j<n && arr2[j]<one; j++)
           {
               arr2[j-1]=arr2[j];
           }
              arr2[j-1]=one;
       } 
    }
}

int main() {
    int arr1[]={1,3,5,7};
    int arr2[]={2,4,6,8};
    int m=sizeof(arr1)/sizeof(arr1[0]);
    int n=sizeof(arr2)/sizeof(arr2[0]);
    mergeArray(arr1, m, arr2, n);
    
    cout<<"arr1: ";
    for(int I=0; I<m; I++)
    cout<<arr1[I]<<" ";
    cout<<endl;
    cout<<"arr2: ";
    for(int I=0; I<m; I++)
    cout<<arr2[I]<<" ";
    cout<<endl;

    return 0;
}