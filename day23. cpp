#include <iostream>
#include <vector>
#include <algorithm>
using namespace std;

vector<int> slidingWindow(vector<int>& arr, int k){
    if(arr.empty() || k<=0){
        return{};
    }
    vector<int> result;
    int n=arr.size() ;
    for(int i=0;i<=n-k;++i){
        int maxValue=arr[i];
        for(int j=1;j<=k;++j){
            if(arr[i+j]>maxValue){
                maxValue=arr[i+j];
            }
        }
        result. push_back(maxValue);
    }  
    return result;
}   
int main() {
    vector<int> arr={1,3,-1,-3,5,3,6,7};
    int k=3;
    vector<int> output=slidingWindow(arr, k);
    cout<<"output: [";
    for(size_t i=0;i<output.size(); ++i){
        cout<<output[i]<<(i==output.size() -1 ? "": ", ");
    }
    cout<<"]";
    return 0;
}
